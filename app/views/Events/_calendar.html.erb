<div class="row" style="margin-top: 40px";>
<div class='calendar well'>
<div class="header lead" style="text-align: center";>
	<%= link_to "← ", events_path(day: @date - 1.month) %>
	<%= @date.strftime("%B") %>
	<%= link_to " →", events_path(day: @date + 1.month) %>
</div>

<table class='titles'>
	<tr>
	<td class="smallcaps">
		MON
	</td>
	
	<td class="smallcaps">
		TUES
	</td>

	<td class="smallcaps">
		WED
	</td>

	<td class="smallcaps">
		THU
	</td>

	<td class="smallcaps">
		FRI
	</td>

	<td class="smallcaps">
		SAT
	</td>

	<td class="smallcaps">
		SUN
	</td>
</tr>
</table>

	<% (@date.beginning_of_month.beginning_of_week..@date.end_of_month.end_of_week).each do |day| %>
		<% if day.monday? %>
		<tr class="week"></tr>
		<% end %>
		
		<td class="day">
		<%= link_to day.day, events_path(day: day) %>
		</td>

	<% end %>
</table>
</div>
</div>