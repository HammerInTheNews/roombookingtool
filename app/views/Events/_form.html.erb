<form class="add-event">

<%= form_for Event.new do |f| %>

<h2>Create new event</h2>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_field :description %>


<%= f.label :start_date %>
<%= f.text_field :start_date, class: "date_picker" %>


 <%= f.label :start_time %>
 <%= f.text_field :start_time, class: "time_picker" %>


<%= f.label :end_date %>
<%= f.text_field :end_date, class: "date_picker" %>



<%= f.label :end_time %>
<%= f.text_field :end_time, class: "time_picker" %>


<%= f.submit %><p>or go <%= link_to 'back', events_path %></p>

<% end %>


<script>
  $(function(){
    $(".time_picker").timepicker();
  });
</script>
