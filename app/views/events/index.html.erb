<div class="container">
	<div class="row">
		<div class="span8">
			<%= render "calendar" %>
		</div>

		<div class="span6">
			<h2>Click on a date to check what events are scheduled for that day.</h2>
			<%= link_to 'Book an event', new_event_path, :class => "btn btn-primary" %>
			

			<dl class="dl-horizontal2">
				<% @events.each do |d| %>
					<div class="event_details clearfix">
						<h3><%= @time.strftime("%A, %B %d, %Y") %></h3>
						<dt>Booked by:</dt><dd><%= d.user.user_name %></dd>
						<dt>Event Name:</dt><dd><%= d.title %></dd>
						<dt>Description:</dt><dd><%= d.description %></dd>
						<dt>Start Time:</dt><dd><%= d.start_at.strftime("%A, %B %e at %l:%M %P") %></dd>
						<dt>End Time:</dt><dd><%= d.end_at.strftime("%A, %B %e at %l:%M %P") %></dd>
						
						<% if d.user == current_user %>
							<%= link_to '<i class="icon-edit"></i>'.html_safe, edit_event_path(d) %>
							

							<%= link_to d, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-danger' do %>
							<i class="icon-trash icon-white"></i>
								<% end %>
						<% end %>
					</div>
				<% end %>
			</dl>
		</div>
	</div>
</div><!--container-->


